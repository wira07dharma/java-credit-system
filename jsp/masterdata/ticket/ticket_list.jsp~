<%!
public static String strTitle[][] = {
	{"No","Penyedia Jasa Penerbangan","Nomor Tiket","Tanggal Uang Muka","Status"},	
	{"No","Carrier","Ticket Number","Deposit Date","Status"}
};

public static final String masterTitle[] = {
	"Master Tiket","Ticket Master"	
};

public static final String classTitle[] = {
	"Daftar Tiket","Ticket List"	
};

public String getJspTitle(String textJsp[][], int index, int language, String prefiks, boolean addBody){
	String result = "";
	if(addBody){
		if(language==com.dimata.util.lang.I_Language.LANGUAGE_DEFAULT){	
			result = textJsp[language][index] + " " + prefiks;
		}else{
			result = prefiks + " " + textJsp[language][index];		
		}
	}else{
		result = textJsp[language][index];
	} 
	return result;
}

public String drawList(int language,int iCommand,FrmTicketList frmTicketList, Vector objectClass, long oidTicketList, int iStart, Vector vCarrier, Vector vDeposit){
	ControlList ctrlist = new ControlList();
	ctrlist.setAreaWidth("60%");
	ctrlist.setListStyle("listgen");
	ctrlist.setTitleStyle("listgentitle");
	ctrlist.setCellStyle("listgensell");
	ctrlist.setCellStyleOdd("listgensellOdd");
	ctrlist.setHeaderStyle("listgentitle");	
	ctrlist.dataFormat(strTitle[language][0],"5%","center","center");
	ctrlist.dataFormat(strTitle[language][1],"15%","center","left");
	ctrlist.dataFormat(strTitle[language][2],"50%","center","left");
	ctrlist.dataFormat(strTitle[language][3],"15%","center","center");
	ctrlist.dataFormat(strTitle[language][4],"15%","center","left");

	ctrlist.setLinkRow(0);
	ctrlist.setLinkSufix("");
	Vector lstData = ctrlist.getData();
	Vector lstLinkData = ctrlist.getLinkData();
	Vector rowx = new Vector(1,1);
	ctrlist.reset();
	int index = -1;

	TicketMaster objCarrier = new TicketMaster();
	TicketDeposit objDeposit = new TicketDeposit();
	Vector vCarrierVal = new Vector(1,1);
	Vector vCarrierKey = new Vector(1,1);
	Vector vDepositVal = new Vector(1,1);
	Vector vDepositKey = new Vector(1,1);
	String selectedVal = "";
	String selectedDeposit = "";
	String statusTicket = "";	

	if(vCarrier != null && vCarrier.size() > 0){
		vCarrierVal = (Vector)vCarrier.get(0);
		vCarrierKey = (Vector)vCarrier.get(1);
	}
	
	if(vDeposit != null && vDeposit.size() > 0){
		vDepositVal = (Vector)vDeposit.get(0);
		vDepositKey = (Vector)vDeposit.get(1);
	}

	for(int i=0; i<objectClass.size(); i++) {
		 TicketList objTicketList = (TicketList)objectClass.get(i);
		  
		 if(objTicketList.getTicketDepositId() != 0){
			selectedDeposit = String.valueOf(objTicketList.getTicketDepositId());
			try{
				objDeposit = PstTicketDeposit.fetchExc(objTicketList.getTicketDepositId());
			}catch(Exception e){}
		 }
		
		 if(objTicketList.getCarrierId() != 0){
			selectedVal = String.valueOf(objTicketList.getCarrierId()); 
			try{
				objCarrier = PstTicketMaster.fetchExc(objTicketList.getCarrierId());
			}catch(Exception e){}
		 }
		 
		 if(objTicketList.getInvoiceDetailId() != 0){
			statusTicket = language == com.dimata.util.lang.I_Language.LANGUAGE_FOREIGN ? "Sold" : "Terjual";
		 }else{
			statusTicket = language == com.dimata.util.lang.I_Language.LANGUAGE_FOREIGN ? "Ready" : "Tersedia";
		}
		 
		 rowx = new Vector();
		
		 if(oidTicketList == objTicketList.getOID())
		 	index = i;
		 
		 if(index==i && (iCommand==Command.EDIT || iCommand==Command.ASK)){
			rowx.add(""+(i+1+iStart));
			rowx.add(""+ControlCombo.draw(frmTicketList.fieldNames[frmTicketList.FRM_CARRIER_ID], null, selectedVal, vCarrierVal, vCarrierKey,"","")+"");
			rowx.add("<input type=\"text\" name=\""+frmTicketList.fieldNames[frmTicketList.FRM_TICKET_NUMBER] +"\"  class=\"elemenForm\" value=\""+objTicketList.getTicketNumber()+"\" size=\"70\">");
			rowx.add(""+ControlCombo.draw(frmTicketList.fieldNames[frmTicketList.FRM_DEPOSIT_ID], null, selectedVal, vDepositVal, vDepositKey,"","")+"");
			rowx.add(statusTicket);
		}else{
			rowx.add(""+(i+1+iStart));
			rowx.add("<a href=\"javascript:cmdEdit('"+String.valueOf(objTicketList.getOID())+"')\">"+objCarrier.getCode()+"</a>");
			rowx.add(objTicketList.getTicketNumber());
			rowx.add(Formater.formatDate(objDeposit.getDepositDate(),"dd-MM-yyyy"));
			rowx.add(statusTicket);
			
		} 

		lstData.add(rowx);
	}

	rowx = new Vector();
	if(iCommand==Command.ADD || (iCommand==Command.SAVE && frmTicketList.errorSize()>0)){ 
	
			rowx.add("");
			rowx.add(""+ControlCombo.draw(frmTicketList.fieldNames[frmTicketList.FRM_CARRIER_ID], null, selectedVal, vCarrierVal, vCarrierKey,"","")+"");
			rowx.add("<input type=\"text\" name=\""+frmTicketList.fieldNames[frmTicketList.FRM_TICKET_NUMBER] +"\"  class=\"elemenForm\" value=\"\" size=\"70\">");
			rowx.add(""+ControlCombo.draw(frmTicketList.fieldNames[frmTicketList.FRM_DEPOSIT_ID], null, selectedVal, vDepositVal, vDepositKey,"","")+"");
			rowx.add("");
	}
	lstData.add(rowx);
	return ctrlist.drawMe(index);
}
