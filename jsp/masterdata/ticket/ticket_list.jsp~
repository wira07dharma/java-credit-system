function cmdAdd(){
	document.frmcontactclass.hidden_ticket_list_id.value="0";
	document.frmcontactclass.command.value="<%=Command.ADD%>";
	document.frmcontactclass.action="ticket_list.jsp";
	document.frmcontactclass.submit();
}

function cmdAsk(oidTicketList){
	document.frmcontactclass.hidden_ticket_list_id.value=oidTicketList;
	document.frmcontactclass.command.value="<%=Command.ASK%>";
	document.frmcontactclass.prev_command.value="<%=prevCommand%>";
	document.frmcontactclass.action="ticket_list.jsp";
	document.frmcontactclass.submit();
}

function cmdConfirmDelete(oidTicketList){
	document.frmcontactclass.hidden_ticket_list_id.value=oidTicketList;
	document.frmcontactclass.command.value="<%=Command.DELETE%>";
	document.frmcontactclass.prev_command.value="<%=prevCommand%>";
	document.frmcontactclass.action="ticket_list.jsp";
	document.frmcontactclass.submit();
}

function cmdSave(){
	document.frmcontactclass.command.value="<%=Command.SAVE%>";
	document.frmcontactclass.prev_command.value="<%=prevCommand%>";
	document.frmcontactclass.action="ticket_list.jsp";
	document.frmcontactclass.submit();
}

function cmdEdit(oidTicketList){
	document.frmcontactclass.hidden_ticket_list_id.value=oidTicketList;
	document.frmcontactclass.command.value="<%=Command.EDIT%>";
	document.frmcontactclass.action="ticket_list.jsp";
	document.frmcontactclass.submit();
}

function cmdCancel(oidTicketList){
	document.frmcontactclass.hidden_ticket_master_id.value=oidTicketList;
	document.frmcontactclass.command.value="<%=Command.EDIT%>";
	document.frmcontactclass.prev_command.value="<%=prevCommand%>";
	document.frmcontactclass.action="ticket_list.jsp";
	document.frmcontactclass.submit();
}

function cmdBack(){
	document.frmcontactclass.command.value="<%=Command.BACK%>";
	document.frmcontactclass.action="ticket_list.jsp";
	document.frmcontactclass.submit();
}

